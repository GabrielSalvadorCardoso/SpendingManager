<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_search_by_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_column="1"
            android:text="Buscar Compra"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/check_box_search_by_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:onClick="onSearchByDateClicked"
            android:text="Buscar por data"/>

        <EditText
            android:id="@+id/edit_text_psearch_initial_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Data inicial: dd/mm/aaaa"/>

        <!--
        <DatePicker
            android:id="@+id/date_picker_psearch_initial_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:hint="Data inicial: dd/mm/aaaa"
            android:datePickerMode="spinner"
            android:calendarViewShown="false">
        </DatePicker>
        -->
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_psearch_final_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:hint="Data final: dd/mm/aaaa"/>

        <!--
        <DatePicker
            android:id="@+id/date_picker_psearch_final_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:hint="Data final: dd/mm/aaaa">
        </DatePicker>
        -->
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/check_box_search_by_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="onSearchByLocationClicked"
            android:text="Buscar por local"/>

        <EditText
            android:id="@+id/edit_text_psearch_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Local da compra"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_psearch_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Buscar">
        </Button>
    </TableRow>

</TableLayout>